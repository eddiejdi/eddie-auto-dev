  "panels": [
    {
      "id": 10,
      "type": "gauge",
      "title": "üîß Self-Healing Status (Stall > 300s)",
      "gridPos": {"h": 4, "w": 12, "x": 0, "y": 0},
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "count(increase(selfhealing_restarts_total[5m])) > 0",
          "legendFormat": "Restarts (5m)",
          "refId": "A"
        },
        {
          "expr": "avg(time() - process_start_time_seconds) > 300",
          "legendFormat": "Stalled Services",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {"text": "‚úÖ Healthy", "color": "green"},
                "1": {"text": "‚ö†Ô∏è Stalled", "color": "orange"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 1},
              {"color": "red", "value": 3}
            ]
          },
          "unit": "short",
          "min": 0,
          "max": 5
        }
      },
      "options": {
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 11,
      "type": "stat",
      "title": "üìä Service Stall History (5m)",
      "gridPos": {"h": 4, "w": 12, "x": 12, "y": 0},
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "count(max_over_time((time() - process_start_time_seconds) > 300[5m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "type": "range",
              "options": {
                "from": 0,
                "to": 1,
                "result": {"text": "OK", "color": "green"}
              }
            },
            {
              "type": "range",
              "options": {
                "from": 1,
                "to": 2,
                "result": {"text": "HEALING", "color": "orange"}
              }
            },
            {
              "type": "range",
              "options": {
                "from": 2,
                "to": 100,
                "result": {"text": "CRITICAL", "color": "red"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "orange", "value": 1},
              {"color": "red", "value": 3}
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": ["lastNotNull"]
        }
      }
    },
