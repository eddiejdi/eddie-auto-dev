{
  "dashboard": {
    "title": "Eddie Bus - Monitor de Comunicação",
    "description": "Monitoramento em tempo real do AgentCommunicationBus",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total de Mensagens",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "eddie_bus_messages_count",
            "legendFormat": "Mensagens"
          }
        ]
      },
      {
        "id": 2,
        "title": "Saúde da API",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "eddie_bus_api_health",
            "legendFormat": "API Status"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "showThresholdLabels": false,
          "showThresholdMarkers": true,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "Tempo de Resposta da API",
        "type": "graph",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "rate(eddie_bus_api_response_time_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Mensagens por Tipo",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 10
        },
        "targets": [
          {
            "expr": "eddie_bus_messages_by_type",
            "legendFormat": "{{type}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Mensagens por Origem",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 10
        },
        "targets": [
          {
            "expr": "eddie_bus_messages_by_source",
            "legendFormat": "{{source}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Taxa de Mensagens (5min)",
        "type": "graph",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 18
        },
        "targets": [
          {
            "expr": "rate(eddie_bus_messages_total[5m])",
            "legendFormat": "{{type}}"
          }
        ]
      }
    ],
    "schemaVersion": 27,
    "style": "dark",
    "tags": [
      "eddie",
      "bus",
      "monitoring"
    ],
    "version": 0
  },
  "overwrite": true
}
