{
  "dashboard": {
    "title": "Homelab Advisor Agent",
    "tags": ["homelab", "advisor", "agent"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Status do Agente",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"homelab-copilot-agent\"}",
            "refId": "A",
            "legendFormat": "Status"
          }
        ],
        "options": {
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "value": "0",
                "text": "Offline"
              },
              {
                "type": "value",
                "value": "1",
                "text": "Online"
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Requisições HTTP/s",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"homelab-copilot-agent\"}[5m]))",
            "refId": "A",
            "legendFormat": "Req/s"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2,
            "custom": {"hideFrom": {"tooltip": false, "viz": false, "legend": false}},
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "orange", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Taxa de Erros",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"homelab-copilot-agent\",status=~\"5..\"}[5m])) OR vector(0)",
            "refId": "A",
            "legendFormat": "Erros/s"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 3,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "orange", "value": 0.5},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Tempo de Resposta Mediano",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket{job=\"homelab-copilot-agent\"}[5m])) by (le))",
            "refId": "A",
            "legendFormat": "p50"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "orange", "value": 1},
                {"color": "red", "value": 2}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "CPU do Servidor",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "refId": "A",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "%",
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "orange", "value": 75},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "legend": {"calcs": [], "displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 6,
        "title": "Memória do Servidor",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
            "refId": "A",
            "legendFormat": "Memória {{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "%",
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "orange", "value": 80},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "legend": {"calcs": [], "displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 7,
        "title": "Uso de Disco",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "100 * (node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"} - node_filesystem_avail_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"}) / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"}",
            "refId": "A",
            "legendFormat": "Disco {{device}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "%",
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {"type": "linear"},
              "showPoints": "never",
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "orange", "value": 85},
                {"color": "red", "value": 95}
              ]
            }
          }
        },
        "options": {
          "legend": {"calcs": [], "displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 8,
        "title": "Endpoints Chamados",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (increase(http_requests_total{job=\"homelab-copilot-agent\"}[1h])))",
            "refId": "A",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"hideFrom": {"tooltip": false, "viz": false, "legend": false}}
          }
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "pieType": "donut",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 9,
        "title": "Análises Completadas (24h)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 20, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(advisor_analysis_total{job=\"homelab-copilot-agent\"}[24h]))",
            "refId": "A",
            "legendFormat": "Total"
          }
        ],
        "options": {
          "graphMode": "number",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Agentes Treinados",
        "type": "stat",
        "gridPos": {"x": 6, "y": 20, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(advisor_agents_trained_total{job=\"homelab-copilot-agent\"}[24h])) OR vector(0)",
            "refId": "A",
            "legendFormat": "Total"
          }
        ],
        "options": {
          "graphMode": "number",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Requisições IPC Pendentes",
        "type": "stat",
        "gridPos": {"x": 12, "y": 20, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "advisor_ipc_pending_requests{job=\"homelab-copilot-agent\"}",
            "refId": "A",
            "legendFormat": "Pendentes"
          }
        ],
        "options": {
          "graphMode": "number",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "orange", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Latência Mediana das Análises",
        "type": "stat",
        "gridPos": {"x": 18, "y": 20, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(advisor_analysis_duration_seconds_bucket{job=\"homelab-copilot-agent\"}[5m])) by (le))",
            "refId": "A",
            "legendFormat": "p50"
          }
        ],
        "options": {
          "graphMode": "number",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "orange", "value": 2},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Histórico de Requisições HTTP",
        "type": "table",
        "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "topk(50, http_requests_total{job=\"homelab-copilot-agent\"})",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": []
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "__name__": "Métrica",
                "endpoint": "Endpoint",
                "method": "Método",
                "status": "Status",
                "instance": "Instância"
              }
            }
          }
        ]
      }
    ],
    "schemaVersion": 35,
    "style": "dark",
    "refresh": "30s",
    "time": {"from": "now-6h", "to": "now"},
    "timepicker": {"refresh_intervals": ["30s", "1m", "5m", "10m", "30m", "1h"]},
    "uid": "homelab-advisor",
    "version": 1
  },
  "overwrite": true
}
