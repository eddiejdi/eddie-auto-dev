{
  "dashboard": {
    "title": "Homelab Advisor Agent",
    "tags": ["homelab", "advisor", "agent"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Status do Agente",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "up",
            "refId": "A",
            "legendFormat": "Status"
          }
        ],
        "options": {
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "OFFLINE", "color": "red"}, "1": {"text": "ONLINE", "color": "green"}}}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Requisições HTTP/s",
        "type": "stat",
        "gridPos": {"x": 4, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) OR vector(0)",
            "refId": "A",
            "legendFormat": "Req/s"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Taxa de Erros (4xx+5xx)",
        "type": "stat",
        "gridPos": {"x": 8, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"[45]..\"}[5m])) / sum(rate(http_requests_total[5m])) * 100 OR vector(0)",
            "refId": "A",
            "legendFormat": "Erro %"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "orange", "value": 15},
                {"color": "red", "value": 30}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Chamadas LLM (24h)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(advisor_llm_calls_total[24h])) OR vector(0)",
            "refId": "A",
            "legendFormat": "Total"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null},
                {"color": "green", "value": 5},
                {"color": "yellow", "value": 30}
              ]
            },
            "noValue": "0"
          }
        }
      },
      {
        "id": 5,
        "title": "Análises (24h)",
        "type": "stat",
        "gridPos": {"x": 16, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(advisor_analysis_total[24h])) OR vector(0)",
            "refId": "A",
            "legendFormat": "Total"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null},
                {"color": "green", "value": 5},
                {"color": "yellow", "value": 30}
              ]
            },
            "noValue": "0"
          }
        }
      },
      {
        "id": 6,
        "title": "API Registrado",
        "type": "stat",
        "gridPos": {"x": 20, "y": 0, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "advisor_api_registration_status OR vector(0)",
            "refId": "A",
            "legendFormat": "API"
          }
        ],
        "options": {
          "graphMode": "none",
          "orientation": "auto",
          "colorMode": "background",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DESCONECTADO", "color": "red"}, "1": {"text": "REGISTRADO", "color": "green"}}}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Requisições HTTP por Endpoint",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (endpoint, status) (rate(http_requests_total{endpoint!~\"/(favicon.ico)?\"}[5m]))",
            "refId": "A",
            "legendFormat": "{{endpoint}} [{{status}}]"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 15,
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "pointSize": 5,
              "showPoints": "auto",
              "spanNulls": true,
              "stacking": {"mode": "none"}
            }
          }
        },
        "options": {
          "legend": {"calcs": ["mean", "max"], "displayMode": "table", "placement": "bottom"},
          "tooltip": {"mode": "multi", "sort": "desc"}
        }
      },
      {
        "id": 8,
        "title": "Duração das Análises (LLM)",
        "type": "timeseries",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(advisor_analysis_duration_seconds_sum[5m]) / rate(advisor_analysis_duration_seconds_count[5m])",
            "refId": "A",
            "legendFormat": "Avg {{scope}}"
          },
          {
            "expr": "rate(advisor_llm_duration_seconds_sum[5m]) / rate(advisor_llm_duration_seconds_count[5m])",
            "refId": "B",
            "legendFormat": "Avg LLM call"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "pointSize": 5,
              "showPoints": "auto",
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 120}
              ]
            }
          }
        },
        "options": {
          "legend": {"calcs": ["mean", "max"], "displayMode": "table", "placement": "bottom"},
          "tooltip": {"mode": "multi", "sort": "desc"}
        }
      },
      {
        "id": 9,
        "title": "Scheduler — Execuções por Scope",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "increase(advisor_scheduler_runs_total[1h])",
            "refId": "A",
            "legendFormat": "{{scope}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 60,
              "lineWidth": 1,
              "pointSize": 5,
              "showPoints": "never",
              "stacking": {"mode": "normal"}
            }
          }
        },
        "options": {
          "legend": {"calcs": ["sum"], "displayMode": "table", "placement": "bottom"},
          "tooltip": {"mode": "multi", "sort": "desc"}
        }
      },
      {
        "id": 10,
        "title": "Endpoints Chamados (Distribuição)",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (increase(http_requests_total{endpoint!~\"/(favicon.ico)?\"}[24h])))",
            "refId": "A",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          }
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
          "pieType": "donut",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        }
      },
      {
        "id": 11,
        "title": "IPC Pendentes",
        "type": "gauge",
        "gridPos": {"x": 0, "y": 20, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "advisor_ipc_pending_requests OR vector(0)",
            "refId": "A",
            "legendFormat": "Pendentes"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true,
          "orientation": "auto",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 20,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "orange", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Duração Média LLM",
        "type": "gauge",
        "gridPos": {"x": 6, "y": 20, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "advisor_llm_duration_seconds_sum / advisor_llm_duration_seconds_count OR vector(0)",
            "refId": "A",
            "legendFormat": "Avg LLM"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true,
          "orientation": "auto",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 1,
            "min": 0,
            "max": 180,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "orange", "value": 120},
                {"color": "red", "value": 150}
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Scheduler — Última Execução",
        "type": "stat",
        "gridPos": {"x": 12, "y": 20, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "time() - advisor_scheduler_last_run_timestamp{scope=\"performance\"}",
            "refId": "A",
            "legendFormat": "Performance"
          },
          {
            "expr": "time() - advisor_scheduler_last_run_timestamp{scope=\"security\"}",
            "refId": "B",
            "legendFormat": "Security"
          },
          {
            "expr": "time() - advisor_scheduler_last_run_timestamp{scope=\"architecture\"}",
            "refId": "C",
            "legendFormat": "Architecture"
          }
        ],
        "options": {
          "graphMode": "none",
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1800},
                {"color": "orange", "value": 3600},
                {"color": "red", "value": 7200}
              ]
            }
          }
        }
      },
      {
        "id": 14,
        "title": "Reports API (24h)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 20, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "sum(increase(advisor_api_reports_total{status=\"success\"}[24h])) OR vector(0)",
            "refId": "A",
            "legendFormat": "Sucesso"
          },
          {
            "expr": "sum(increase(advisor_api_reports_total{status!=\"success\"}[24h])) OR vector(0)",
            "refId": "B",
            "legendFormat": "Falha"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 30}
              ]
            },
            "noValue": "0"
          }
        }
      },
      {
        "id": 15,
        "title": "Erros Scheduler (24h)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 25, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(advisor_scheduler_errors_total[24h])) OR vector(0)",
            "refId": "A",
            "legendFormat": "Erros"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "auto",
          "colorMode": "background",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "noValue": "0"
          }
        }
      },
      {
        "id": 16,
        "title": "IPC Processadas (24h)",
        "type": "stat",
        "gridPos": {"x": 6, "y": 25, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(advisor_ipc_messages_processed_total{result=\"success\"}[24h])) OR vector(0)",
            "refId": "A",
            "legendFormat": "OK"
          },
          {
            "expr": "sum(increase(advisor_ipc_messages_processed_total{result=\"error\"}[24h])) OR vector(0)",
            "refId": "B",
            "legendFormat": "Erro"
          }
        ],
        "options": {
          "graphMode": "area",
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null},
                {"color": "green", "value": 5}
              ]
            },
            "noValue": "0"
          }
        }
      },
      {
        "id": 17,
        "title": "LLM Sucesso vs Erro",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 25, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "advisor_llm_calls_total{job=\"homelab-copilot-agent\"}",
            "refId": "A",
            "legendFormat": "{{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"}
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "success"},
              "properties": [{"id": "color", "value": {"fixedColor": "green", "mode": "fixed"}}]
            },
            {
              "matcher": {"id": "byName", "options": "error"},
              "properties": [{"id": "color", "value": {"fixedColor": "red", "mode": "fixed"}}]
            }
          ]
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value"]},
          "pieType": "donut",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        }
      },
      {
        "id": 18,
        "title": "Memória do Processo (Agent)",
        "type": "timeseries",
        "gridPos": {"x": 18, "y": 25, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "avg(process_resident_memory_bytes) / 1024 / 1024",
            "refId": "A",
            "legendFormat": "RSS (MB)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 20,
              "lineInterpolation": "smooth",
              "lineWidth": 1,
              "showPoints": "never",
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 200},
                {"color": "red", "value": 500}
              ]
            }
          }
        },
        "options": {
          "legend": {"calcs": ["lastNotNull"], "displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 19,
        "title": "Histórico de Requisições HTTP",
        "type": "table",
        "gridPos": {"x": 0, "y": 29, "w": 24, "h": 7},
        "targets": [
          {
            "expr": "topk(50, http_requests_total)",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "Value", "desc": true}],
          "footer": {"show": true, "reducer": ["sum"], "fields": ["Value"]}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "filterable": true
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {"id": "custom.displayMode", "value": "color-background"},
                {"id": "color", "value": {"mode": "continuous-GrYlRd"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "status"},
              "properties": [
                {"id": "custom.displayMode", "value": "color-background-solid"},
                {"id": "mappings", "value": [
                  {"type": "value", "options": {"200": {"text": "200 OK", "color": "green"}, "404": {"text": "404 NOT FOUND", "color": "orange"}, "500": {"text": "500 ERROR", "color": "red"}}}
                ]}
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true, "instance": true},
              "renameByName": {
                "endpoint": "Endpoint",
                "method": "Método",
                "status": "Status",
                "job": "Job",
                "Value": "Total"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [{"field": "Total", "desc": true}]
            }
          }
        ]
      },
      {
        "id": 20,
        "title": "Logs — Homelab Advisor (live)",
        "type": "logs",
        "gridPos": {"x": 0, "y": 36, "w": 18, "h": 10},
        "targets": [
          {
            "expr": "{container_name=\"homelab-copilot-agent\"}",
            "refId": "A",
            "datasource": "Loki"
          }
        ],
        "options": {"showLabels": true, "showTime": true, "wrapLogMessage": true}
      },
      {
        "id": 21,
        "title": "Erros (5m)",
        "type": "timeseries",
        "gridPos": {"x": 18, "y": 36, "w": 6, "h": 5},
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"docker\"} |= \"[ERROR]\"[5m]))",
            "refId": "A",
            "datasource": "Loki",
            "legendFormat": "ERRORs/5m"
          }
        ],
        "fieldConfig": {"defaults": {"unit": "short"}},
        "options": {"legend": {"displayMode": "table", "placement": "bottom"}}
      },
      {
        "id": 22,
        "title": "Severidade (1h)",
        "type": "piechart",
        "gridPos": {"x": 18, "y": 41, "w": 6, "h": 5},
        "targets": [
          { "expr": "count_over_time({job=\"docker\"} |= \"[ERROR]\"[1h])", "refId": "A", "datasource": "Loki", "legendFormat": "ERROR" },
          { "expr": "count_over_time({job=\"docker\"} |= \"[WARN]\"[1h])", "refId": "B", "datasource": "Loki", "legendFormat": "WARN" },
          { "expr": "count_over_time({job=\"docker\"} |= \"[WARNING]\"[1h])", "refId": "C", "datasource": "Loki", "legendFormat": "WARNING" },
          { "expr": "count_over_time({job=\"docker\"} |= \"[INFO]\"[1h])", "refId": "D", "datasource": "Loki", "legendFormat": "INFO" }
        ],
        "fieldConfig": {"defaults": {"color": {"mode": "palette-classic"}}},
        "options": {"legend": {"displayMode": "table", "placement": "right"}, "pieType": "donut"}
      },
      {
        "id": 23,
        "title": "Advisor Heartbeat (s since)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 46, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "time() - advisor_heartbeat_timestamp",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "reduceOptions": {"values": false, "fields": "", "calcs": ["lastNotNull"]}
        },
        "fieldConfig": {
