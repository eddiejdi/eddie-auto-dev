[Unit]
Description=Eddie Coder - Specialized Agents API
After=network.target

[Service]
Type=simple
User=home-lab
WorkingDirectory=/home/home-lab/myClaude/specialized_agents
Environment="PATH=/home/home-lab/.local/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/home-lab/myClaude/.env
Environment="OLLAMA_HOST=http://192.168.15.2:11434"
ExecStart=/home/home-lab/.local/bin/uvicorn api:app --host 0.0.0.0 --port 8503
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
