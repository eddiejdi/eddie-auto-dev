[Unit]
Description=Specialized Agents Dashboard
After=network.target docker.service

[Service]
Type=simple
User=homelab
WorkingDirectory=/home/homelab/myClaude
Environment=PATH=/home/homelab/myClaude/venv/bin:/usr/local/bin:/usr/bin:/bin
EnvironmentFile=/home/homelab/myClaude/.env
ExecStart=/home/homelab/myClaude/venv/bin/streamlit run /home/homelab/myClaude/specialized_agents/streamlit_app.py --server.port 8502 --server.address 0.0.0.0 --browser.gatherUsageStats false
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
