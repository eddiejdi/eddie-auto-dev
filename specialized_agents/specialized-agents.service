[Unit]
Description=Specialized Agents Dashboard
After=network.target docker.service

[Service]
Type=simple
User=home-lab
WorkingDirectory=/home/home-lab/myClaude
Environment=PATH=/home/home-lab/myClaude/venv/bin:/usr/local/bin:/usr/bin:/bin
EnvironmentFile=/home/home-lab/myClaude/.env
ExecStart=/home/home-lab/myClaude/venv/bin/streamlit run /home/home-lab/myClaude/specialized_agents/streamlit_app.py --server.port 8502 --server.address 0.0.0.0 --browser.gatherUsageStats false
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
